<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xusenweli.cis_3334_unit_6x_mobile_farah.MainActivity">


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerNamesNumbers"
        android:entries="@array/magac" />

    <TextView
        android:id="@+id/textViewNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button1Call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickOrder"
        android:text="Call" />

    <Button
        android:id="@+id/button2Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickOrder"
        android:text="Send Message" />

    <TextView
        android:id="@+id/textViewDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
